<h1>New game</h1>
<ul class="d-flex gap-4 ps-0">
  <% @letters.each do |letter| %>
    <li class="bg-primary p-2 rounded text-light fw-bold w-50 text-center"><%= letter %></li>
  <% end %>
</ul>
<p>What is the longest word you can find?</p>
<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="letters" type="hidden" value="<%= @letters.join(", ") %>"/>
  <div class="input-group">
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play" class="btn btn-primary">
  </div>
</form>
